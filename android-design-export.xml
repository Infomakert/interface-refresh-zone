<?xml version="1.0" encoding="utf-8"?>
<!-- abbyPay Android Design System Export -->
<!-- Generated from Lovable web application -->

<design-system>
    <!-- Color Palette -->
    <colors>
        <!-- Primary Brand Colors -->
        <color name="primary">#E16046</color> <!-- hsl(12, 85%, 65%) -->
        <color name="primary_foreground">#FFFFFF</color>
        
        <!-- Background Colors -->
        <color name="background">#0F0F0F</color> <!-- hsl(0, 0%, 6%) -->
        <color name="foreground">#F2F2F2</color> <!-- hsl(0, 0%, 95%) -->
        <color name="card_background">#1A1A1A</color> <!-- hsl(0, 0%, 10%) -->
        
        <!-- Secondary Colors -->
        <color name="secondary">#262626</color> <!-- hsl(0, 0%, 15%) -->
        <color name="secondary_foreground">#E6E6E6</color> <!-- hsl(0, 0%, 90%) -->
        
        <!-- Muted Colors -->
        <color name="muted">#262626</color> <!-- hsl(0, 0%, 15%) -->
        <color name="muted_foreground">#B3B3B3</color> <!-- hsl(0, 0%, 70%) -->
        
        <!-- Border and Input -->
        <color name="border">#333333</color> <!-- hsl(0, 0%, 20%) -->
        <color name="input_background">#262626</color> <!-- hsl(0, 0%, 15%) -->
        
        <!-- Status Colors -->
        <color name="destructive">#DC2626</color> <!-- hsl(0, 84%, 60%) -->
        <color name="destructive_foreground">#FFFFFF</color>
    </colors>

    <!-- Gradients -->
    <gradients>
        <gradient name="brand_gradient">
            <start_color>#E16046</start_color> <!-- hsl(12, 85%, 65%) -->
            <end_color>#FF8A65</end_color> <!-- hsl(20, 100%, 70%) -->
            <angle>135</angle>
        </gradient>
        
        <gradient name="subtle_background">
            <start_color>#141414</start_color> <!-- hsl(0, 0%, 8%) -->
            <end_color>#0F0F0F</end_color> <!-- hsl(0, 0%, 6%) -->
            <angle>180</angle>
        </gradient>
    </gradients>

    <!-- Typography -->
    <typography>
        <text_style name="heading_large">
            <size>24sp</size>
            <weight>bold</weight>
            <color>@color/foreground</color>
        </text_style>
        
        <text_style name="body_regular">
            <size>16sp</size>
            <weight>normal</weight>
            <color>@color/foreground</color>
        </text_style>
        
        <text_style name="label_small">
            <size>14sp</size>
            <weight>medium</weight>
            <color>@color/muted_foreground</color>
        </text_style>
        
        <text_style name="button_text">
            <size>16sp</size>
            <weight>medium</weight>
            <color>@color/primary_foreground</color>
        </text_style>
    </typography>

    <!-- Spacing System -->
    <dimensions>
        <dimen name="spacing_xs">4dp</dimen>
        <dimen name="spacing_sm">8dp</dimen>
        <dimen name="spacing_md">16dp</dimen>
        <dimen name="spacing_lg">24dp</dimen>
        <dimen name="spacing_xl">32dp</dimen>
        <dimen name="spacing_2xl">48dp</dimen>
        
        <!-- Border Radius -->
        <dimen name="radius_sm">8dp</dimen>
        <dimen name="radius_md">12dp</dimen>
        <dimen name="radius_lg">16dp</dimen>
        <dimen name="radius_xl">24dp</dimen>
        
        <!-- Component Sizes -->
        <dimen name="button_height">48dp</dimen>
        <dimen name="input_height">56dp</dimen>
        <dimen name="logo_height">48dp</dimen>
    </dimensions>

    <!-- Layout Specifications -->
    <layouts>
        <!-- Login Screen Layout -->
        <layout name="activity_login">
            <background>@color/background</background>
            <padding>@dimen/spacing_md</padding>
            
            <container name="login_card">
                <background>@color/card_background</background>
                <corner_radius>@dimen/radius_xl</corner_radius>
                <padding>@dimen/spacing_2xl</padding>
                <elevation>8dp</elevation>
                <max_width>400dp</max_width>
                
                <logo>
                    <height>@dimen/logo_height</height>
                    <margin_bottom>@dimen/spacing_2xl</margin_bottom>
                    <gravity>center</gravity>
                </logo>
                
                <heading>
                    <text>Authorize Reader</text>
                    <style>@style/heading_large</style>
                    <margin_bottom>@dimen/spacing_sm</margin_bottom>
                    <gravity>center</gravity>
                </heading>
                
                <subtitle>
                    <text>Generate your API Key on the merchant Portal</text>
                    <style>@style/label_small</style>
                    <margin_bottom>@dimen/spacing_2xl</margin_bottom>
                    <gravity>center</gravity>
                </subtitle>
                
                <form>
                    <input name="api_key">
                        <label>API Key</label>
                        <hint>Enter your API key</hint>
                        <height>@dimen/input_height</height>
                        <background>transparent</background>
                        <border_bottom>2dp solid @color/border</border_bottom>
                        <focus_border>2dp solid @color/primary</focus_border>
                        <margin_bottom>@dimen/spacing_lg</margin_bottom>
                        <icon_end>qr_code</icon_end>
                    </input>
                    
                    <divider>
                        <text>OR</text>
                        <style>@style/label_small</style>
                        <margin>@dimen/spacing_lg</margin>
                    </divider>
                    
                    <input name="username">
                        <label>Username</label>
                        <hint>Enter your username</hint>
                        <height>@dimen/input_height</height>
                        <background>transparent</background>
                        <border_bottom>2dp solid @color/border</border_bottom>
                        <focus_border>2dp solid @color/primary</focus_border>
                        <margin_bottom>@dimen/spacing_lg</margin_bottom>
                    </input>
                    
                    <input name="password">
                        <label>Password</label>
                        <hint>Enter your password</hint>
                        <type>password</type>
                        <height>@dimen/input_height</height>
                        <background>transparent</background>
                        <border_bottom>2dp solid @color/border</border_bottom>
                        <focus_border>2dp solid @color/primary</focus_border>
                        <margin_bottom>@dimen/spacing_2xl</margin_bottom>
                        <icon_end>visibility_toggle</icon_end>
                    </input>
                    
                    <button name="login_button">
                        <text>Login</text>
                        <style>@style/button_text</style>
                        <background>@color/primary</background>
                        <height>@dimen/button_height</height>
                        <corner_radius>@dimen/radius_md</corner_radius>
                        <width>match_parent</width>
                        <margin_top>@dimen/spacing_2xl</margin_top>
                    </button>
                </form>
                
                <support_link>
                    <text>Need help? Contact Support</text>
                    <style>@style/label_small</style>
                    <link_color>@color/primary</link_color>
                    <margin_top>@dimen/spacing_lg</margin_top>
                    <gravity>center</gravity>
                </support_link>
            </container>
        </layout>
        
        <!-- Loading Screen Layout -->
        <layout name="activity_loading">
            <background>#000000</background>
            
            <logo_container>
                <gravity>center</gravity>
                <logo>
                    <height>80dp</height>
                    <animation>logo_reveal</animation>
                </logo>
            </logo_container>
        </layout>
    </layouts>

    <!-- Button Styles -->
    <button_styles>
        <style name="primary_button">
            <background>@color/primary</background>
            <text_color>@color/primary_foreground</text_color>
            <corner_radius>@dimen/radius_md</corner_radius>
            <height>@dimen/button_height</height>
            <padding_horizontal>@dimen/spacing_lg</padding_horizontal>
            <text_size>16sp</text_size>
            <text_weight>medium</text_weight>
            <elevation>2dp</elevation>
            
            <pressed_state>
                <background_alpha>0.9</background_alpha>
            </pressed_state>
            
            <disabled_state>
                <background_alpha>0.5</background_alpha>
            </disabled_state>
        </style>
    </button_styles>

    <!-- Input Field Styles -->
    <input_styles>
        <style name="underline_input">
            <background>transparent</background>
            <text_color>@color/foreground</text_color>
            <hint_color>@color/muted_foreground</hint_color>
            <border>none</border>
            <border_bottom>2dp solid @color/border</border_bottom>
            <padding_bottom>12dp</padding_bottom>
            <padding_top>8dp</padding_top>
            <text_size>16sp</text_size>
            
            <focused_state>
                <border_bottom>2dp solid @color/primary</border_bottom>
            </focused_state>
            
            <label>
                <text_color>@color/muted_foreground</text_color>
                <text_size>14sp</text_size>
                <text_weight>medium</text_weight>
                <margin_bottom>8dp</margin_bottom>
            </label>
        </style>
    </input_styles>

    <!-- Animations -->
    <animations>
        <animation name="logo_reveal">
            <duration>3000ms</duration>
            <interpolator>ease_in_out</interpolator>
            
            <keyframes>
                <keyframe time="0%">
                    <alpha>0</alpha>
                    <brightness>0</brightness>
                </keyframe>
                <keyframe time="20%">
                    <alpha>1</alpha>
                    <brightness>0</brightness>
                </keyframe>
                <keyframe time="100%">
                    <alpha>1</alpha>
                    <brightness>1</brightness>
                </keyframe>
            </keyframes>
        </animation>
        
        <animation name="stroke_reveal">
            <duration>3000ms</duration>
            <interpolator>ease_in_out</interpolator>
            
            <keyframes>
                <keyframe time="0%">
                    <translate_x>-100%</translate_x>
                    <alpha>1</alpha>
                </keyframe>
                <keyframe time="80%">
                    <translate_x>100%</translate_x>
                    <alpha>1</alpha>
                </keyframe>
                <keyframe time="100%">
                    <translate_x>100%</translate_x>
                    <alpha>0</alpha>
                </keyframe>
            </keyframes>
        </animation>
    </animations>

    <!-- Shadow and Elevation -->
    <elevations>
        <elevation name="card_elevation">
            <dp>8</dp>
            <color>#26E16046</color> <!-- Primary color with 15% opacity -->
        </elevation>
        
        <elevation name="button_elevation">
            <dp>2</dp>
            <color>#1AE16046</color> <!-- Primary color with 10% opacity -->
        </elevation>
    </elevations>

    <!-- Assets and Resources -->
    <assets>
        <image name="logo_main">
            <path>drawable/logo_main</path>
            <description>Main abcY Pay logo</description>
            <recommended_size>48dp height</recommended_size>
        </image>
        
        <image name="logo_loading">
            <path>drawable/logo_loading</path>
            <description>Logo for loading screen animation</description>
            <recommended_size>80dp height</recommended_size>
        </image>
        
        <icon name="qr_code">
            <path>drawable/ic_qr_code</path>
            <size>24dp</size>
            <tint>@color/primary</tint>
        </icon>
        
        <icon name="visibility">
            <path>drawable/ic_visibility</path>
            <size>24dp</size>
            <tint>@color/muted_foreground</tint>
        </icon>
        
        <icon name="visibility_off">
            <path>drawable/ic_visibility_off</path>
            <size>24dp</size>
            <tint>@color/muted_foreground</tint>
        </icon>
    </assets>

    <!-- Screen Specifications -->
    <screens>
        <screen name="login">
            <title>Authorize Reader</title>
            <navigation>false</navigation>
            <status_bar>dark_content</status_bar>
            <orientation>portrait</orientation>
            <full_screen>false</full_screen>
        </screen>
        
        <screen name="loading">
            <title>Loading</title>
            <navigation>false</navigation>
            <status_bar>hidden</status_bar>
            <orientation>portrait</orientation>
            <full_screen>true</full_screen>
            <auto_navigate>
                <target>login</target>
                <delay>3000ms</delay>
            </auto_navigate>
        </screen>
    </screens>
</design-system>